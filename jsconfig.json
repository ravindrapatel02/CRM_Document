{
	"compilerOptions": {
		// Using "baseUrl" allows you to use absolute paths
		"baseUrl": "./",
		// Using "paths" allows you to configure module path aliases
		"paths": {
			"@components/*": ["src/components/*"],
			"@context/*": ["src/context/*"],
			"@hoc/*": ["src/hoc/*"],
			"@shared/*": ["src/shared/*"],
			"@modules/*": ["src/modules/*"],
			"@redux/*": ["src/redux/*"],
			"@images/*": ["src/images/*"],
			"@utility/*": ["src/utility/*"],
			"@assets/*": ["src/assets/*"],
			"@styles/*": ["src/styles/*"],
			"@public/*": ["public/*"]
		}
	},
	"include": ["./src", "./public"],
	"exclude": ["node_modules", "**/node_modules/*"]
}

